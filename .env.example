# .env.example
# Copy this file to .env and fill in your values

# ============================================
# Trading Engine Configuration
# ============================================
RUST_LOG=info
TRADING_MODE=paper  # paper, live, backtest, paused

# ============================================
# Exchange API Credentials
# ============================================

# Hyperliquid
HYPERLIQUID_API_KEY=your_api_key_here
HYPERLIQUID_SECRET=your_secret_here

# Binance Futures
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET=your_secret_here

# Interactive Brokers
IBKR_HOST=127.0.0.1
IBKR_PORT=4001
IBKR_CLIENT_ID=1

# ============================================
# Universe Data Sources (Optional)
# ============================================
ENABLE_UNIVERSE=false

# GeckoTerminal API
GECKO_TERMINAL_API_KEY=

# Birdeye API
BIRDEYE_API_KEY=

# The Graph API
THE_GRAPH_API_KEY=

# CryptoPanic API
CRYPTO_PANIC_API_KEY=

# Flipside Crypto API
FLIPSIDE_API_KEY=

# ============================================
# AWS Configuration (Optional)
# ============================================
ENABLE_AWS=false

# AWS Credentials (or use IAM role)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# S3 for training data
S3_BUCKET=hft-training-data

# SNS for alerts
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:hft-alerts

# Secrets Manager
SECRETS_MANAGER_ENABLED=false

# ============================================
# Monitoring & Observability
# ============================================

# Prometheus
PROMETHEUS_PORT=9090

# WebSocket Server
WS_HOST=0.0.0.0
WS_PORT=8081

# Metrics Export Interval (seconds)
METRICS_INTERVAL=1

# ============================================
# ML Models
# ============================================
MODELS_DIR=./models
CRYPTO_MODELS_DIR=./models/crypto
EQUITY_MODELS_DIR=./models/equity

# Model Inference Timeout (milliseconds)
INFERENCE_TIMEOUT_MS=3

# Fallback to rule-based if models fail
ENABLE_RULE_BASED_FALLBACK=true

# ============================================
# Risk Management
# ============================================

# Position Limits
MAX_NOTIONAL_PER_SYMBOL=100000.0
MAX_TOTAL_NOTIONAL=500000.0
MAX_LEVERAGE=3.0

# Loss Limits
MAX_LOSS_PER_DAY=10000.0
MAX_POSITION_CONCENTRATION=0.25

# Kill Switch
KILL_SWITCH_ACTIVE=false

# ============================================
# Gate Parameters
# ============================================
GATE_ENABLED=true
MIN_EDGE_BPS=5.0
MIN_CONFIDENCE=0.5
MAX_HOLD_SECONDS=30.0
MAX_SPREAD_BPS=10.0

# ============================================
# Feature Engineering
# ============================================
FEATURE_WINDOW_SIZE=1000

# ============================================
# Database (Optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost/hft_db

# ============================================
# Message Bus (Optional)
# ============================================
NATS_URL=nats://localhost:4222

# ============================================
# Development
# ============================================

# Enable debug logging
DEBUG=false

# Enable backtrace
RUST_BACKTRACE=1

# Enable development features
DEV_MODE=true

# Mock trading (no real orders)
MOCK_TRADING=false
